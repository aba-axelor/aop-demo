<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<grid name="contact-grid" title="Contact"
		model="com.axelor.student.db.Contact">
		<field name="fullName" />
		<field name="dateOfBirth" />
		<field name="email" />
		<field name="phone" />
	</grid>

	<!-- title is name which is shown in tab when we open grid or form view -->

	<form name="contact-form" title="Contact"
		model="com.axelor.student.db.Contact" width="large"
		onNew="dob.show,phy.show,test">


		<panel name="studentPanel" title="Student" showFrame="true"
			hidden="false">
			<field name="FullName" readonly="false">
				<editor>
					<field name="firstName" colSpan="4" onChange="dob.show,test" />
					<field name="lastName" colSpan="5" />
				</editor>

			</field>

			<field name="dateOfBirth" />

			<panel showFrame="true">
				<field name="physicallyChallenged"
					title="Pysically Challenged" onChange="phy.show" />
				<field name="scolarShip" title="Scolar-Ship" />
			</panel>

			<panel>

				<field name="email">
					<viewer><![CDATA[ 
	        <a href="mailto:{{record.email}}">{{record.email}}</a>
	        ]]></viewer>
				</field>

				<field name="phone">
					<viewer><![CDATA[
	        		<a href=title of the panel"tel:{{record.phone}}">{{record.phone}}</a>
	        	]]></viewer>
				</field>

			</panel>

		</panel>


		<panel-related name="qualificationsPanel"
			field="qualifications" />

		<panel-related name="addrressPanel" field="addresses" />

	</form>

	<form model="com.axelor.student.db.Department" title="Department"
		name="department-form">
		<panel>
			<field name="code" />
			<field name="name" />
		</panel>
	</form>

	<cards name="contact-card" model="com.axelor.student.db.Contact"
		title="Contact">
		<field name="firstName" />
		<field name="lastName" />
		<field name="dateOfBirth" />
		<field name="email" />
		<field name="phone" />
		<field name="hasImage" />

		<template>
			<![CDATA[
			  <div class="span4 card-image">
			    <img ng-if="hasImage" ng-src="{{$image(null, 'image')}}">
			    <img ng-if="!hasImage" src="img/user.png">
			    <strong>{{firstName}}</strong>
			  </div>
			  
			  <button type="button" class="btn" ui-action-click="address.tree.all" title="AddressButton">Address</>
			]]>
	    </template>
	</cards>

	<action-attrs name="dob.show">
		<attribute for="dateOfBirth" name="readonly"
			expr="firstName == null" />
	</action-attrs>

	<action-attrs name="phy.show">
		<attribute name="readonly" for="scolarShip"
			expr="!physicallyChallenged" />
	</action-attrs>
	
	<action-record name="test" model="com.axelor.student.db.Contact">
		<field name="lastName" expr="eval: __user__.name" if="firstName == 'hello'"/>
	</action-record>
</object-views>



